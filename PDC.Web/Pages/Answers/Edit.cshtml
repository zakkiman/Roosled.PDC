@page
@model PDC.Web.Pages.Answers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>tAnswer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="tAnswer.answer_id" />
            <div class="form-group">
                <label asp-for="tAnswer.answer_detail" class="control-label">Detail</label>
                <input asp-for="tAnswer.answer_detail" class="form-control" />
                <span asp-validation-for="tAnswer.answer_detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tAnswer.score" class="control-label">Score</label>
                <input asp-for="tAnswer.score" class="form-control" />
                <span asp-validation-for="tAnswer.score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Create">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
