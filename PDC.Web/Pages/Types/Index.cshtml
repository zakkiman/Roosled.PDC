@page
@model PDC.Web.Pages.Types.IndexModel

@{
    ViewData["Title"] = "Types";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Type Name</th>
            <th>Alias</th>
            <th>Substractor</th>
            <th>Divider</th>
            <th>Always Display</th>
            <th>Automatic Display</th>
            <th>Create By</th>
            <th>Create Date</th>
            <th>Edit By</th>
            <th>Edit Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.tType) {
        <tr>
            <td>@item.type_name</td>
            <td>@Html.DisplayFor(modelItem => item.type_alias)</td>
            <td>@item.substractor.ToString("0.00#")</td>
            <td>@item.divider.ToString("0.00#")</td>
            <td>
                <input type="checkbox" value="@item.display" class="checkbox" disabled checked="@item.display" />
            </td>
            <td>
                <input type="checkbox" value="@item.auto_display" class="checkbox" disabled checked="@item.display"/>
            </td>
            <td>@Html.DisplayFor(modelItem => item.create_by)</td>
            <td>@item.create_date.ToString("dd MMM yy HH:mm")</td>
            <td>@Html.DisplayFor(modelItem => item.edit_by)</td>
            <td>@item.edit_date.ToString("dd MMM yy HH:mm")</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.type_name">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
