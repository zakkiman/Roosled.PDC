@page
@model PDC.Web.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="tUser.Id" />
            <div class="form-group">
                <label asp-for="tUser.UserName" class="control-label"></label>
                <input asp-for="tUser.UserName" class="form-control" disabled />
                <span asp-validation-for="tUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tUser.Email" class="control-label"></label>
                <input asp-for="tUser.Email" class="form-control" />
                <span asp-validation-for="tUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roles.Name" class="control-label">Role</label>
                <select asp-for="Roles.Name" class="form-control" asp-items="ViewBag.roles"></select>
                <span asp-validation-for="Roles.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
