@page
@model PDC.Web.Pages.Cities.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>tCity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="tCity.city_name" class="form-control" placeholder="City Name" autofocus/>
                <span asp-validation-for="tCity.city_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="tCity.province.province_id" class ="form-control" asp-items="ViewBag.province"></select>
            </div>
            <div class="form-group">
                <select asp-for="tCity.time_area" class="form-control" asp-items="ViewBag.time_area"></select>
                <span asp-validation-for="tCity.time_area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
