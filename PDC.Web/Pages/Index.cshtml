@page
@model IndexModel
@section header{
    <style type="text/css">
        .Requested {
            background-color: grey;
            color: #fff; padding:2px;
        }

        .Approved {
            background-color: green;
            color: #fff;
            padding: 2px;
        }

        .Rejected {
            background-color: red;
            color: #fff;
            padding: 2px;
        }

        .Pending {
            background-color: lime;
            color: #fff;
            padding: 2px;
        }
        .byline:hover{ color:#000; cursor:pointer; }
    </style>
}
@{
    ViewData["Title"] = "Home page";
}
<!-- top tiles -->
<div class="row tile_count">
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Approved Applicants</span>
        <div class="count">@Model.sumApprovedApplicants / @Model.applicants.Count()</div>
        @*<span class="count_bottom"><i class="green">@String.Format("{0:d}", (Model.sumApprovedApplicants / Model.applicants.Count())*100) % </i> Approved</span>*@
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-clock-o"></i> Average Time</span>
        <div class="count">123.50</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>3% </i> From last Week</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total Males</span>
        <div class="count green">2,500</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total Females</span>
        <div class="count">4,567</div>
        <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>12% </i> From last Week</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total Collections</span>
        <div class="count">2,315</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total Connections</span>
        <div class="count">7,325</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
    </div>
</div>
<!-- /top tiles -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" style="background-color:rgba(255, 255, 255, 0.75); border-radius:15px">

    </div>
</div>
<div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Batches <small>Requests</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" style="display: block;">
                <div class="dashboard-widget-content">
                    <ul class="list-unstyled timeline widget">
                        @foreach (var item in Model.batches)
                        {
                            <li>
                                <div class="block">
                                    <div class="block_content">
                                        <h2 class="title">
                                            <a>@Html.DisplayFor(m => item.batch_name)</a>&nbsp;<label class="pull-right @item.approval_status">@item.approval_status</label>
                                        </h2>
                                        <p class="excerpt" style="display:none;">
                                            @item.approval_status
                                        </p>
                                        <div class="byline">
                                            <span>Start: @item.batch_start.ToString("dd MMM yyyy HH:mm") until @item.batch_end.ToString("dd MMM yyyy HH:mm")</span>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Recent Activities <small>Sessions</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
