@page
@model PDC.Web.Pages.Questions.IndexModel
@section header{
    <style type="text/css">
        .Requested {
            background-color: grey;
            color: #fff;
        }

        .Approved {
            background-color: green;
            color: #fff;
        }

        .Rejected {
            background-color: red;
            color: #fff;
        }

        .Pending {
            background-color: lime;
            color: #fff;
        }
    </style>
}
@{
    ViewData["Title"] = "Questions";
}

<h2>Question List</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Details</th>
            <th>Status</th>
            <th>Approved By</th>
            <th>Approved Date</th>
            <th>Score</th>
            <th>Create By</th>
            <th>Create Date</th>
            <th>Edit By</th>
            <th>Edit Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model.tQuestion)
        {
           
           int ansCount = 0;
           ansCount = Model.tAnswer.Where(a => a.question_id == item.question_id).Count();
           <tr>
                <td>@(rowNo += 1)</td>
                <td>
                    <a href="/Answers/Create?id=@item.question_id" data-toggle="tooltip" title="Answer count: @ansCount">@Html.DisplayFor(modelItem => item.question_detail)</a>
                </td>
                <td class="@item.approval_status">
                    @Html.DisplayFor(modelItem => item.approval_status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.approved_by)
                </td>
                <td>
                    @if (item.approved_by != "")
                    {
                        @item.approved_date.ToString("dd MMM yyyy HH:m")
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.create_by)
                </td>
                <td>
                    @item.create_date.ToString("dd MMM yyyy HH:m")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edit_by)
                </td>
                <td>
                    @item.edit_date.ToString("dd MMM yyyy HH:m")
                </td>
                <td>
                    @if (item.approved_by != "")
                    {
                        <a asp-page="./Delete" asp-route-id="@item.question_id">Delete</a>
                    }
                    else
                    {
                        <a asp-page="./Edit" asp-route-id="@item.question_id">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.question_id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-page="Create">Create New</a>
</p>