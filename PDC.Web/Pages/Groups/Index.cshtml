    <div class="col-md-10">
        <div class="row">
            <div class="col-md-6">
                <div class="panel-heading " role="tab" id="heading1">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse1" aria-expanded="true" aria-controls="collapseOne">@Html.DisplayFor(modelItem => item.group_name)</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
