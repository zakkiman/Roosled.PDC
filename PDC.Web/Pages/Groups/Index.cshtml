                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="menu">
                                        <div class="row">
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.add_menu)&nbsp;Add Menu</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.edit_menu)&nbsp;Update Menu</div>
