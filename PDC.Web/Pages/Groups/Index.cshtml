                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.edit_group)&nbsp;Update Group</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.delete_group)&nbsp;Delete Group</div>
                                        </div>
                                        <div class="row">
