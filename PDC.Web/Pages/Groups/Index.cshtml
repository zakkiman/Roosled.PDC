                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.edit_user)&nbsp;Update User</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.delete_user)&nbsp;Delete User</div>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="province">
