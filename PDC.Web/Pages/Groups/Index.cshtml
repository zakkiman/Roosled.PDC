                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.add_applicant)&nbsp;Add Applicant</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.edit_applicant)&nbsp;Update Applicant</div>
