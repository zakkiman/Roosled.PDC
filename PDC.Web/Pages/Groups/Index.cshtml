                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.add_province)&nbsp;Add Province</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.edit_province)&nbsp;Update Province</div>
                                            <div class="col-md-3">@Html.DisplayFor(modelItem => item.delete_province)&nbsp;Delete Province</div>
